<div class="container">
  <h1>All our Flats</h1>
  <p>All <%= @flats.count %> flats.</p>
  <div class=" row mt-4 w-100 mx-0 ">
    <% @flats.each do |flat| %>
      <div class="col-4 mb-3 px-3">
          <div class="card">
            <img src="..." class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= flat.name %></h5>
              <p class="card-text"><%= flat.address %></p>
              <div class="d-flex ">
                <div class="d-flex ms-3">
                  <i class="fa-solid fa-user-group"></i>
                  <p><%= flat.number_of_guests %></p>
                </div>
                <div class="d-flex ms-3">
                  <i class="fa-solid fa-euro-sign"></i>
                  <p><%= flat.price_per_night %></p>
                </div>
              </div>
              <div class="d-flex justify-content-between ">
                <a href=""><%= link_to 'More info', flat_path(flat) %></a>
                <a href=""><%= link_to 'More info', flat_path(flat) %></a>
                <a href=""><%= link_to 'More info', flat_path(flat) %></a>
              </div>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>
